<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <!-- Viewpager页面 -->

    <android.support.v4.view.ViewPager
        android:id="@+id/guide_viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="25dp" >

        <!-- 摆放静态点 -->

        <LinearLayout
            android:id="@+id/guide_point_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >
        </LinearLayout>

        <!-- 动态的点 -->

        <ImageView
            android:id="@+id/guide_iv_pointfocus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/point_focus" />
    </RelativeLayout>

    <Button
        android:id="@+id/guide_btn_start"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="55dp"
        android:background="@drawable/guide_btn_selector"
        android:text="开始体验"
        android:textStyle="bold"
        android:textColor="@color/guide_btn_textcolor_selector"
        android:visibility="gone" />

</RelativeLayout>
